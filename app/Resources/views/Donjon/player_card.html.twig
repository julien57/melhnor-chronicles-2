{% extends 'donjon_layout.html.twig' %}

{% block content %}

    <h2>{{ 'donjon.player-card'|trans }} {{ player.username }}</h2>

    <a href="{{ path('donjon') }}">{{ 'donjon.return-dashboard'|trans }}</a>

    <div class="row">
        <div class="col-md-6">
            <div class="card p-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h3>{{ 'donjon.delete-player'|trans }}</h3>
                        <p>{{ 'donjon.question-remove-player'|trans }}</p>

                            <a href="{{ path('donjon_remove', {'id': player.id}) }}" class="btn btn-danger">{{ 'donjon.delete-player'|trans }}</a>

                        <p>{{ 'donjon.warning-remove-player'|trans }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card p-2">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h3>{{ 'donjon.player-info'|trans }}</h3>
                         <p>{{ 'donjon.kingdom-name'|trans }} : {{ player.kingdom.name }}<br>
                            {{ 'donjon.registration-date'|trans }} : {{ player.dateRegistration|date('d/m/Y') }}<br>
                            {{ 'donjon.last-connection'|trans }} : le {{ player.lastConnection|date_modify('+2 hour')|date('d/m/Y à H:i:s') }}<br>
                            {{ 'donjon.mail'|trans }} : {{ player.mail }}<br>
                            {{ 'title.action-points'|trans }} : {{ player.actionPoints }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>{{ 'donjon.sent-message'|trans }}</h3>
            {% for message in messages %}
            <div class="card p-6">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h3>{{ message.subject }}</h3>
                        <p>{{ message.message }}</p>
                        <p>Le {{ message.atDate|date('d/m/Y à H:i:s') }}. {{ 'donjon.recipient'|trans }} : {{ message.recipient.username }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}