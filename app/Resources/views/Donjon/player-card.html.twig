{% extends 'donjon-layout.html.twig' %}

{% block content %}

    <h2>Fiche du joueur {{ player.username }}</h2>
    <div class="row">
        <a href="{{ path('donjon') }}">
            Retour sur le Dashboard
        </a>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card p-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h3>Suppression joueur</h3>
                        <p>Voulez-vous supprimer ?</p>

                        <form action="{{ path('playerCard', {'id': player.id}) }}" method="post">
                            <input type="submit" value="Supprimer" class="btn btn-danger" />
                        </form>
                        <p>Attention, en cliquant sur <em>Supprimer</em>, le joueur sera définitivement supprimé</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card p-2">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h3>Infos joueur</h3>
                        <p>Nom du royaume : {{ player.kingdom.name }}<br>
                            Date d'inscription : {{ player.dateRegistration|date('d/m/Y') }}<br>
                            Dernière connexion : le {{ player.lastConnection|date_modify('+2 hour')|date('d/m/Y à H:i:s') }}<br>
                            Adresse mail : {{ player.mail }}<br>
                            Points d'action : {{ player.actionPoints }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card p-6">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h3>Messages envoyés</h3>
                        <p>Ici les menssages envoyés du joueur</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}