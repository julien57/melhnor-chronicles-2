{% extends "donjon-layout.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <div class="card p-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <span class="h4 d-block font-weight-normal mb-2">{{ players|length }}</span>
                        <span class="font-weight-light">{{ 'donjon.nb-players'|trans }}</span>
                    </div>

                    <div class="h2 text-muted">
                        <i class="icon icon-people"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <span class="h4 d-block font-weight-normal mb-2">{{ nbSales }}</span>
                        <span class="font-weight-light">{{ 'donjon.nb-resources-market'|trans }}</span>
                    </div>

                    <div class="h2 text-muted">
                        <i class="icon icon-wallet"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row ">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    {{ 'donjon.players-list'|trans }}
                </div>

                <div class="card-body p-0">
                    <div class="p-4">

                        <p>{{ 'donjon.pages'|trans }} : {% include 'Pagination/pagination.html.twig' %}</p>

                        {% for player in players %}
                            <p>{{ player.username }} |
                                <a href="{{ path('playerCard', {'id': player.id}) }}">{{ 'donjon.player-card'|trans }}</a>
                            </p>
                        {% endfor %}

                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}