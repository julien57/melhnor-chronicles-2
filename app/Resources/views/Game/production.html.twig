{% extends "game_layout.html.twig" %}

{% block content %}

    <h2>{{ 'title.production'|trans }}</h2>
    <p class="section-description">
        {{ 'message.population-gain'|trans({'%number%': resourcesConsumed.population}) }}
    </p>

    <div class="container-fluid">

        <div class="row">
            <div class="col-md-4">
                <h3>{{ 'title.produced-resources'|trans }}</h3>

                {% for resource, quantity in resultProduce.produced %}
                    <p>{{ resource }} : {{ quantity }}</p>
                {% endfor %}
            </div>
            <div class="col-md-4">
                <h3>{{ 'title.used-resources'|trans }}</h3>

                {% if resultProduce.used is defined %}
                    {% for resource, quantity in resultProduce.used %}
                        <p>{{ resource }} : {{ quantity }}</p>
                    {% endfor %}
                {% endif %}
            </div>
            <div class="col-md-4">
                <h3>{{ 'title.consumed-resources'|trans }}</h3>

                {% if resourcesConsumed.consumed is defined %}
                    {% for resource, quantity in resourcesConsumed.consumed %}
                        <p>{{ resource }} : {{ quantity }}</p>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}