{% extends "game-layout.html.twig" %}

{% block content %}

    <h2>Production</h2>

    <div class="container">

        <div class="row">
            <div class="col-md-6">
                <h3>Ressources Produites</h3>

                {% for resource, quantity in resultProduce.produced %}
                    <p>{{ resource }} : {{ quantity }}</p>
                {% endfor %}
            </div>
            <div class="col-md-6">
                <h3>Ressources utilis√©es</h3>

                {% if resultProduce.used is defined %}
                    {% for resource, quantity in resultProduce.used %}
                        <p>{{ resource }} : {{ quantity }}</p>
                    {% endfor %}
                {% endif %}

            </div>
        </div>
    </div>

{% endblock %}