{% extends "game_layout.html.twig" %}

{% block title %}
    {{ 'title.event'|trans }}
{% endblock %}

{% block description %}
    {{ 'description.event'|trans }}
{% endblock %}

{% block content %}

    <div class="row pattern">

        <h2>{{ 'title.events'|trans }}</h2>

        <section class="store" id="store">
        <div class="container">
        {% if events is empty %}
            <p class="section-description">Aucun event pour le moment...</p>
        {% endif %}

            <div class="row items-container">
            {%  for event in events %}
                {% if loop.index == 1 %}
                <div class="col-xs-5 col-sm-3 gallery-item item-1 thumbnail-50" data-toggle="modal" data-target="#shop-modal">
                    <div class="link-participate">/participation-event/{{ event.id }}</div>
                    <img src="{{ asset('front/img/event/') }}{{ event.imgMin }}" alt="iOS Version">
                    <span class="item-price-caption hidden-xs">{{ event.description }} {{ event.ap }} PA + 5 PA par combat</span>
                    <span class="item-name-caption hidden-xs">{{ event.name }} ({{ event.difficulty }})</span>
                    <div class="panel-item__text">
                        <h3 class="panel-item__title">{{ event.name }} ({{ event.difficulty }})</h3>
                        <p class="panel-item__summary">
                            {{ event.description[:100] ~ '...' }}
                        </p>
                    </div>
                    <a xmlns="http://www.w3.org/1999/xhtml" class="button-game">
                        <span class="button-game-bg-left"></span>
                        <span class="button-game-bg-mid">
                            <span>{{ 'button.details'|trans }}</span>
                            </span>
                        <span class="button-game-bg-right"></span>
                    </a>
                </div>
                    {% endif %}
                {% if loop.index == 2 %}
                    <div class="col-xs-5 col-xs-offset-2 col-sm-3 col-sm-offset-1 gallery-item item-2 thumbnail-50" data-toggle="modal" data-target="#shop-modal">
                        <div class="link-participate">/participation-event/{{ event.id }}</div>
                        <img src="{{ asset('front/img/event/') }}{{ event.imgMin }}" alt="iOS Version">
                        <span class="item-price-caption hidden-xs">{{ event.description }} {{ event.ap }} PA + 5 PA par combat</span>
                        <span class="item-name-caption hidden-xs">{{ event.name }} ({{ event.difficulty }})</span>
                        <div class="panel-item__text">
                            <h3 class="panel-item__title">{{ event.name }} ({{ event.difficulty }})</h3>
                            <p class="panel-item__summary">
                                {{ event.description[:100] ~ '...' }}
                            </p>
                        </div>
                        <a xmlns="http://www.w3.org/1999/xhtml" class="button-game">
                            <span class="button-game-bg-left"></span>
                            <span class="button-game-bg-mid">
                            <span>{{ 'button.details'|trans }}</span>
                            </span>
                            <span class="button-game-bg-right"></span>
                        </a>
                    </div>
                    <div class="clearfix visible-xs"></div>
                    {% endif %}
                {% if loop.index == 3 %}
                    <div class="col-xs-5 col-sm-3 col-sm-offset-1 gallery-item item-3 thumbnail-50" data-toggle="modal" data-target="#shop-modal">
                        <div class="link-participate">/participation-event/{{ event.id }}</div>
                        <img src="{{ asset('front/img/event/') }}{{ event.imgMin }}" alt="iOS Version">
                        <span class="item-price-caption hidden-xs">{{ event.description|raw }} {{ event.ap }} PA + 5 PA par combat</span>
                        <span class="item-name-caption hidden-xs">{{ event.name }} ({{ event.difficulty }})</span>
                        <div class="panel-item__text">
                            <h3 class="panel-item__title">{{ event.name }} ({{ event.difficulty }})</h3>
                            <p class="panel-item__summary">
                                {{ event.description[:100] ~ '...' }}
                            </p>
                        </div>
                        <a xmlns="http://www.w3.org/1999/xhtml" class="button-game">
                            <span class="button-game-bg-left"></span>
                            <span class="button-game-bg-mid">
                            <span>{{ 'button.details'|trans }}</span>
                            </span>
                            <span class="button-game-bg-right"></span>
                        </a>
                    </div>
                </div>

                {% endif %}

            {% endfor %}

            <div class="row items-container bottom-wrapper">
                <!-- Modal -->
                <div class="modal fade" id="shop-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <span class="Video-border Video-border--top"></span>
                            <span class="Video-border Video-border--right"></span>
                            <span class="Video-border Video-border--bottom"></span>
                            <span class="Video-border Video-border--left"></span>
                            <span class="Video-corner Video-corner--topLeft"></span>
                            <span class="Video-corner Video-corner--topRight"></span>
                            <span class="Video-corner Video-corner--bottomRight"></span>
                            <span class="Video-corner Video-corner--bottomLeft"></span>
                            <div class="modal-header pattern">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel"></h4>
                            </div>
                            <div class="modal-body pattern-dark clearfix" id="modalBody">
                                <img src="" id="showcase-img" class="img-thumbnail" alt="Showcase Dragonic Game">
                                <ul id="model-feats">
                                </ul>
                                <div class="clearfix"></div>
                                <div class="price panel-item__summary" id="modal-price-tag">price here</div>
                            </div>
                            <div class="modal-footer pattern">
                                <!--<button type="button" class="btn">Order now</button>-->
                                <a xmlns="http://www.w3.org/1999/xhtml" id="link" class="button-game shop-modal-hide" href="">
                                    <span class="button-game-bg-left"></span>
                                    <span class="button-game-bg-mid">
                                                    <span>Participer</span>
                                                    </span>
                                    <span class="button-game-bg-right"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            </div>
        </section>
    </div>

{% endblock %}