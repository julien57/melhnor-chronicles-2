{% extends "game-layout.html.twig" %}

{% block content %}

    <div class="fluid-container">

        <h2>{{ app.user.kingdom.name }}</h2>

        <div class="col-md-6">

            <h3>B창timents</h3>

            <div class="row">
                <div class="col-md-8 panel-item__summary justify-content-md-start">
                    <a href="{{ path('build-building') }}" class="btn">Construire un b창timent</a>

                    <h4>B창timents du royaume</h4>

                    {{ form_start(formBuilding, {'attr': {'class': 'contact-form'}}) }}

                        {% for kingdomBuilding in formBuilding.KingdomBuildings %}

                            <div class="row">
                                <div class="col-sm-12 building-icon">
                                    <div class="col-md-3">
                                        <div class="row">
                                            B창timent :
                                        </div>
                                        {{ form_widget(kingdomBuilding.building, {'attr': {'class': 'form-control'}}) }}
                                    </div>

                                    <div class="col-md-3">
                                        <div class="row">
                                            Niveau :
                                        </div>
                                        {{ form_widget(kingdomBuilding.level) }}
                                    </div>

                                    <div class="col-md-6">
                                        <button type="submit" class="btn">Augmenter</button>
                                    </div>

                                </div>
                            </div>

                        {% endfor %}

                    {{ form_end(formBuilding) }}

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h3>Ressources</h3>

            {% for kingdomResource in kingdomResources %}
                <p>{{ kingdomResource.resource.name }} : {{ kingdomResource.quantity }}</p>
            {% endfor %}

        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button href="{{ path('production') }}" class="btn">Produire</button>
            </div>
        </div>
    </div>

{% endblock %}