            </div>

            <div class="row">
                <div class="col-md-6 panel-item__summary justify-content-md-start">

                    {{ form(formBuilding) }}

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h3>Resources</h3>

            {% for kingdomResource in kingdomResources %}
                <p>{{ kingdomResource.resource.name }} : {{ kingdomResource.quantity }}</p>
            {% endfor %}

        </div>

    </div>

{% endblock %}